import java.util.Scanner;

public class Solution {

    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);
        int n = sc.nextInt(); 
        int a = sc.nextInt(); 
        int b = sc.nextInt(); 
        int Position = n - Math.max(a, n - b );
        System.out.println(Position);
    }
}
